{
  "name": "omega-prime-deployer",
  "version": "1.0.0",
  "description": "Multi-chain deployment framework for ACT ecosystem",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:solana && npm run build:evm",
    "build:solana": "anchor build",
    "build:evm": "npx hardhat compile",
    "test": "npm run test:solana && npm run test:evm",
    "test:solana": "anchor test",
    "test:evm": "npx hardhat test",
    "deploy:solana": "anchor deploy",
    "deploy:evm": "npx hardhat run scripts/deploy.js",
    "audit": "node scripts/audit.js",
    "security": "npm audit && slither ."
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@coral-xyz/anchor": "^0.29.0",
    "@openzeppelin/contracts": "^5.0.1",
    "hardhat": "^2.19.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "mocha": "^10.2.0",
    "chai": "^4.3.10"
  }
}